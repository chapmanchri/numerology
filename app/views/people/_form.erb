<form action="<%= people_form_action(@person) %>" method="post">
	<input type="hidden" name="_method" value="<%= people_form_method(@person) %>" />
	
	<div class="form-padding">
		<label for="first_name">First Name:</label>
		<input type="text" name="first_name" value="<%= @person.first_name %>" />
	</div>

	<div class="form-padding">
		<label for="last_name">Last Name:</label>  
		<input type="text" name="last_name" value="<%= @person.last_name %>" />
	</div>

	<div class="form-padding">
		<label for="birthdate">Birthdate:</label>
		<input name="birthdate" type="date" value="<% if @person.birthdate == nil %> <%= @person.birthdate %> <% else %><%= @person.birthdate.strftime("%Y-%m-%d") %><% end %>"/>
	</div>	

	<div class="form-padding">
		<input type="submit" />
	</div>
</form>
